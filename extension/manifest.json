{
  "manifest_version": 3,
  "name": "Prompt Enhancer: AI Chat Assistant",
  "description": "Enhance AI chat prompts using advanced prompt and context engineering. Works on ChatGPT and Claude.",
  "version": "1.0.1",
  "minimum_chrome_version": "114",
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Prompt Enhancer",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon-128.svg"
    }
  },
  "options_page": "options/options.html",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "commands": {
    "enhance-prompt": {
      "description": "Enhance the current prompt (when on a supported chat page)"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://claude.ai/*"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/overlay.css"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://claude.ai/*"]
    }
  ]
}
